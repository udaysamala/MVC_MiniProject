@model OnlineShoppingCart_WebApp_MVC.Models.CSignup

@{
    ViewBag.Title = "SignUp";
}

<h2>SignUp</h2>
<h1>@ViewBag.alert</h1>

<div class="jumbotron jumbotron-fluid">
    <div class="container-fluid">
        <br />
        <div class="row">
            <div class="col-lg-6">
                <div class="container-fluid">
                    <center>
                        <h1 style="font-family:Century Gothic">Online ShoppingCart </h1>
                        <img src="~/Images/cart1.png" style="width:50%">
                    </center>
                </div>
            </div>

            <div class="col-lg-6">
                @using (Html.BeginForm("SignUp","Home"))
                {
                    <div class="container-fluid">
                        <center>
                            <br />
                            <div style="border:1px solid lightgrey;background-color:white;border-radius:30px;padding:50px; box-shadow: 0 1px 9px 0 rgba(0, 0, 0, 0.6), 0 1px 10px 0 rgba(0, 0, 0, 0.19);">

                                <div class="row">
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Full Name", @style = "background-color:whitesmoke" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        @Html.ValidationMessageFor(model => model.Name, null, new { @style = "color:indianred" })
                                    </div>

                                </div>
                                <br />

                                <div class="row">
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(model => model.Mobile, new { @class = "form-control", @placeholder = "Mobile Number", @style = "background-color:whitesmoke" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        @Html.ValidationMessageFor(model => model.Mobile, null, new { @style = "color:indianred" })
                                    </div>

                                </div>
                                <br />

                                <div class="row">
                                    <div class="col-sm-12">
                                        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Email ID", @style = "background-color:whitesmoke" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        @Html.ValidationMessageFor(model => model.Username, null, new { @style = "color:indianred" })
                                    </div>
                                </div>

                                <br />

                                <div class="row">
                                    <div class="col-sm-12">
                                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = " Password", @style = "background-color:whitesmoke" })
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        @Html.ValidationMessageFor(model => model.Password, null, new { @style = "color:indianred" })
                                    </div>

                                </div>

                                <br />
                                <div class="row">
                                    <div class="col-sm-12">
                                        <input type="submit" style="width:80px;color:dimgray" value="Signup" class="btn btn-default" />
                                        <h6>  Already have an account? @Html.ActionLink("Sign in.", "Login")</h6>
                                    </div>
                                </div>  
                            </div>
                        </center>
                    </div>
                }
            </div>
        </div>
        <br />
        <br />
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
