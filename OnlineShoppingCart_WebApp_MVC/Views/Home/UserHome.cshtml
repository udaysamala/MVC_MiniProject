@model IEnumerable<OnlineShoppingCart_WebApp_MVC.Models.UserViewProductsModel>

@{
    ViewBag.Title = "UserHome";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<h2>UserHome</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>s
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>@Html.DisplayName("Required Quantity")</th>
        <th>@Html.DisplayName("Total Price")</th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("Login", "#"))
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    
                        @Html.DisplayFor(modelItem => item.Price, new {@value=item.Price,@id="p1"})
                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
               
                <td>
                    <input type="number" id="req" value= ,name="reqquantity" placeholder="Enter Number">
                </td>
                <td>
                   
                    <input type="text" id="value1" readonly>

                </td>
                <td>
                    @Html.TextBox("Add to cart", "Add to cart", new { type = "submit" })
                    
                </td>
            </tr>
            }
        }

    </table>
<script>
    var x = document.getElementById("p1").value;
